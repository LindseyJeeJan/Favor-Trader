<div class="d-flex flex-column justify-content-center p-2">
<h1>{{title}}</h1>
<p>Offers{{title}}</p>



{{#each favors as |favor| }}
<div class="card mb-3" style="max-width: 40rem;">
    <div class="card-header d-flex justify-content-between">
    <h5>{{ user.first_name}} {{ user.last_name}}</h5>
    
    </div>
    <div class="card-body d-flex justify-content-between align-items-center">
        <h4 class="card-title">{{favor.title}}</h4>
        <span class="badge bg-danger">Difficulty: {{ favor.difficulty }}</span>

    </div>
    
    <div class="card-body">
        <p class="card-text">{{favor.description}}</p>
       Zip Code: {{ user.zip }}
    </div>

  
    <div class="card-footer text-muted d-flex justify-content-center">
        <div class="mx-1">
            <button type="button" class="btn btn-primary">Comment</button>
        </div>
        <div class="mx-1">
            <button type="button" class="btn btn-warning">Apply for Trade</button>
        </div>
  
    </div>
</div>
{{/each}}


</div>
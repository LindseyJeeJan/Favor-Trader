<div class="d-flex flex-column justify-content-center p-2">
<h1>{{title}}</h1>
<p>Offers{{title}}</p>



{{#each favors as |favor| }}
<div class="card mb-3" style="max-width: 40rem;">
    <div class="card-header d-flex justify-content-between">
    <h5>{{ user.first_name}} {{ user.last_name}}</h5>
    
    </div>
    <div class="card-body d-flex justify-content-between align-items-center">
        <h4 class="card-title">{{favor.title}}</h4>
        <span class="badge bg-danger">Difficulty: {{ favor.difficulty }}</span>

    </div>
    <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="150"
        aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"
        viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
        <rect width="100%" height="100%" fill="#868e96"></rect>
        <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
    </svg>
    <div class="card-body">
        <p class="card-text">{{favor.description}}</p>
       Zip Code: {{ user.zip }}
    </div>

    <div class="d-flex justify-content-center card-body">
        <div class="mx-1">
        <button type="button" class="btn btn-primary">Comment</button>
        </div>
        <div class="mx-1">
        <button type="button" class="btn btn-warning">Apply for Trade</button>
        </div>
    </div>
    <div class="card-footer text-muted">
        2 days ago
    </div>
</div>
{{/each}}


</div>
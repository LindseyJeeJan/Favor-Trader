{{#if favors.length}}
<div class="col-md-6 favor-list">
    <div class="d-flex justify-content-between">
        <h3>Your favors</h3>
        <div class="mb-4">
            <button class="btn btn-success">Add Favor</button>
        </div>
    </div>


    {{#each favors as |favor| }}
    <div class="card mb-3" style="max-width: 40rem;">
        <div class="card-header d-flex justify-content-between">
            <h5>{{ user.first_name}} {{ user.last_name}}</h5>

        </div>
        <div class="card-body d-flex justify-content-between align-items-center">
            <h4 class="card-title">{{favor.title}}</h4>
            <span data-difficulty="{{favor.difficulty }}" class="badge bg-secondary">Difficulty: </span>

        </div>

        <div class="card-body">
            <p class="card-text">{{favor.description}}</p>
            Zip Code: {{ user.zip }}
        </div>


        <div class="card-footer text-muted d-flex justify-content-center">
            <div class="mx-1">
                <button type="button btn-primary" data-id="{{favor.id}}" class=" btn btn-primary">Edit</button>
            </div>
            <div class="mx-1">
                <button class="btn btn-danger" data-id="{{favor.id}}">DELETE</button>
            </div>

        </div>
    </div>
    {{/each}}
</div>
{{/if}}
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Favor</h3>

        <form class="form new-favor-form">
            <div class="form-group">
                <label for="favor-title">Favor Title:</label>
                <input class="form-input form-control" type="text" id="favor-title" name="favor-title" />
            </div>
            <div class="form-group">
                <label for="favor-desc">description:</label>
                <textarea class="form-input  form-control" id="favor-desc" name="favor-desc"></textarea>
            </div>
            <div class="form-group">
                <label for="favor-difficulty">Difficulty:</label>
                <select class="form-input  form-control" id="favor-difficulty" name="favor-difficulty">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn w-100 btn-success">Create</button>
            </div>
        </form>
    </div>
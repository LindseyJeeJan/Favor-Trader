{{#if favors.length}}
<div class="col-md-6 favor-list">
    <h3>Current favors:</h3>


{{#each favors as |favor| }}
<div class="card mb-3" style="max-width: 40rem;">
    <div class="card-header d-flex justify-content-between">
        <h5>{{ user.first_name}} {{ user.last_name}}</h5>

    </div>
    <div class="card-body d-flex justify-content-between align-items-center">
        <h4 class="card-title">{{favor.title}}</h4>
        <span class="badge bg-danger">Difficulty: {{ favor.difficulty }}</span>

    </div>

    <div class="card-body">
        <p class="card-text">{{favor.description}}</p>
        Zip Code: {{ user.zip }}
    </div>


    <div class="card-footer text-muted d-flex justify-content-center">
        <div class="mx-1">
            <button type="button" class="btn btn-primary">Comment</button>
        </div>
        <div class="mx-1">
            <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
        </div>

    </div>
</div>
{{/each}}
</div>
{{/if}}
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Favor</h3>

        <form class="form new-favor-form">
            <div class="form-group">
                <label for="favor-title">Favor Title:</label>
                <input class="form-input" type="text" id="favor-title" name="favor-title" />
            </div>
            <div class="form-group">
                <label for="favor-desc">description:</label>
                <textarea class="form-input" id="favor-desc" name="favor-desc"></textarea>
            </div>
                        <div class="form-group">
                <label for="favor-difficulty">Difficulty:</label>
                <textarea class="form-input" id="favor-difficulty" name="favor-difficulty"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
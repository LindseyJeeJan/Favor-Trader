<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form new-favor-form">
                <div class="modal-body">
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h3>Create a New Favor</h3>
                            <div class="form-group">
                                <label for="favor-title">Title</label>
                                <input class="form-input form-control" type="text" id="favor-title" name="favor-title" />
                            </div>
                            <div class="form-group">
                                <label for="favor-desc">Description</label>
                                <textarea class="form-input form-control" id="favor-desc" name="favor-desc"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="favor-difficulty">Difficulty Level (1-5)</label>
                                <select class="form-input  form-control" id="favor-difficulty" name="favor-difficulty">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn w-100 btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>